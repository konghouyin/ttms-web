/* pages/orderList/orderList.wxss */

.top{
	background-color: #FF2A00;
	text-align: center;
	color: #fff;
	padding: 30rpx;
}

.status{
	border-bottom: 3rpx solid #ccc;
	font-size: 30rpx;
	color: #999;
	padding: 10px 80rpx;
	overflow: hidden;
}
.status>text{
	display: inline-block;
}

.movie-list {
	display: flex;
	flex-direction: row;
	font-size: 30rpx;
	padding: 25rpx 0;
}

.movie-list .movie-hb {
	width: 23vw;
	height: 200rpx;
	margin: 0 0 0 4vw;
}

.movie-list view {
	width: 60vw;
	margin: 0 0 0 2vw;
	padding: 3rpx 0;
}

.movie-list .movie-name {
	font-size: 40rpx;
}

.movie-list .movie-type {
	color: #999;
}

.movie-list .movie-actor {
	color: #999;
	width: 60vw;
	text-overflow: ellipsis;
	white-space: nowrap;
	overflow: hidden;
}

.main,
.wrap {
	margin: 25rpx 25rpx;
	box-shadow: #ccc 10rpx 10rpx 30rpx 10rpx;
	border-radius: 15rpx;
	background-color: #fff;
}

.ticketList {
	border-top: 4rpx solid #ccc;
	padding: 15rpx 10rpx;
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
}


.ticketList .ticket-each {
	margin: 10rpx 15rpx;
	padding: 10rpx 24rpx;
	border: 2rpx solid #CCCCCC;
	color: #00A0E9;
	font-size: 28rpx;
}