/* pages/index/index.wxss */

page {
	background-color: #eee;
}

::-webkit-scrollbar {
	width: 0;
	height: 0;
	color: transparent;
}

.show-choose {
	background-color: #fff;
	position: fixed;
	top:0;
	display: flex;
	justify-content: center;
	width:100vw;
	z-index: 2;
}

.type {
	padding: 10rpx 20rpx;
	margin: 10rpx 20rpx 20rpx 20rpx;
	font-size: 28rpx;
	color: #777;
}

.active{
	color:#f40;
	border-bottom: 3rpx solid #f40;
}

.input-placeholder {
	color: #aaa;
}

.search-icon {
	display: inline-block;
	position: absolute;
	background-size: 100%;
	right: 0;
	width: 50rpx;
	height: 50rpx;
	border-left: 3rpx solid #aaa;
	padding: 15rpx 25rpx;
}

.swiper-wrap {
	margin-top: 80rpx;
	height: 300rpx;
}

.swiper-item {
	width: 100vw;
}

.swiper-item image {
	width: 100vw;
	height: 100%;
}

.movie-list {
	display: flex;
	flex-direction: row;
	font-size: 30rpx;
	border-top: 2px solid #ccc;
	padding: 25rpx 0;
}

.movie-list .movie-hb {
	width: 22vw;
	height: 200rpx;
	margin: 0 0 0 4vw;
}

.movie-list view {
	width: 70vw;
	margin: 0 0 0 2vw;
	padding: 3rpx 0;
}

.movie-list .movie-name {
	font-size: 40rpx;
}

.movie-list .movie-type {
	color: #999;
}

.movie-list .movie-actor {
	color: #666;
	width: 60vw;
	text-overflow: ellipsis;
	white-space: nowrap;
	overflow: hidden;
}
